<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keypad_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/background_light"
    app:columnCount="4" >

    <Button
        style="@style/noBackgroundButton"
        app:layout_column="0"
        android:tag="clear"
        android:text="Clear" />

    <Button
        style="@style/noBackgroundButton"
        app:layout_column="3"
        android:tag="operator"
        android:text="รท" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="7" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="8" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="9" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="operator"
        android:text="ร" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="4" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="5" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="6" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="operator"
        android:text="-" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="1" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="2" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="number"
        android:text="3" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="operator"
        android:text="+" />

    <Button
        style="@style/noBackgroundButton"
        app:layout_column="1"
        android:tag="number"
        android:text="0" />

    <Button
        style="@style/noBackgroundButton"
        android:tag="dot"
        android:text="." />

    <Button
        style="@style/noBackgroundButton"
        app:layout_gravity="fill"
        app:layout_rowSpan="2"
        android:tag="calculate"
        android:text="=" />

</android.support.v7.widget.GridLayout>